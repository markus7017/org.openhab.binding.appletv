<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="appletv"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="device">
		<label>Apple-TV Device</label>
		<description>This rhing represents an Apple-TV</description>

        <channel-groups>
            <channel-group id="control" typeId="control">
                <label>Remote Control</label>
            </channel-group>
            <channel-group id="playStatus" typeId="playStatus">
                <label>Play Status</label>
            </channel-group>
        </channel-groups>


		<config-description>
            <parameter-group name="deviceInformation">
                <label>Device Information</label>
            </parameter-group>
            <parameter-group name="advancedOptions">
                <label>Advanced Options</label>
            </parameter-group>

			<parameter name="ipAddress" type="text" required="true" groupName="deviceInformation">
				<label>IP Address</label>
				<description>This is the IP address of the Apple TV on the local network.</description>
			</parameter>
            <parameter name="loginId" type="text" required="true" groupName="deviceInformation">
                <label>Login ID</label>
                <description>Login ID generated by the pairing process.</description>
            </parameter>
            <parameter name="libPath" type="text"  groupName="advancedOptions" >
                <label>Lib Install path</label>
                <description>Installation directory for additional libraries (PyATV, jpy).</description>
            </parameter>
		</config-description>

	</thing-type>

    <channel-group-type id="control">
       <label>Remote Control</label>
       <description>Control function for your Media Receiver</description>
       <channels>
            <channel id="remoteKey" typeId="remoteKey" />
       </channels>
   </channel-group-type>
   <channel-group-type id="playStatus">
       <label>Play Status</label>
       <description>Play Status informationr</description>
       <channels>
            <channel id="mediaType" typeId="mediaType" />
            <channel id="playMode" typeId="playMode" />
            <channel id="title" typeId="title" />
            <channel id="artist" typeId="artist" />
            <channel id="album" typeId="album" />
            <channel id="genre" typeId="genre" />
            <channel id="artworkUrl" typeId="artworkUrl" />
            <channel id="position" typeId="position" />
            <channel id="totalTime" typeId="totalTime" />
            <channel id="repeat" typeId="repeat" />
            <channel id="shuffle" typeId="shuffle" />
       </channels>
   </channel-group-type>


	<channel-type id="remoteKey">
		<item-type>String</item-type>
		<label>Remote Key</label>
		<description>Send remote keys to control your Apple-TV</description>
        <state>
            <options>
                <option value="top_menu">Top Menu</option>
                <option value="menu">Menu</option>
                <option value="up">Up</option>
                <option value="down">Down</option>
                <option value="left">Left</option>
                <option value="right">Right</option>
                <option value="select">Select</option>
                <option value="pause">Pause</option>
                <option value="play">Play</option>
                <option value="stop">Stop</option>
                <option value="next">Next</option>
                <option value="previous">Previous</option>
            </options>
        </state>
	</channel-type>

    <channel-type id="playMode">
        <item-type>String</item-type>
        <label>Play Mode</label>
        <description>Status of the media player</description>
        <state readOnly="true">
            <options>
                <option value="Idle">Idle</option>
                <option value="No Media">No Media</option>
                <option value="Loading">Loading</option>
                <option value="Paused">Paused</option>
                <option value="Playing">Playing</option>
                <option value="Fast forward">Fast Forward</option>
                <option value="Fast backward">Fast Rewind</option>
            </options>
        </state>
    </channel-type>
    <channel-type id="mediaType">
        <item-type>String</item-type>
        <label>Media Type</label>
        <description>Type of media currently playing</description>
        <state readOnly="true">
            <options>
                <option value="Unknown">Unknown</option>
                <option value="Video">Video</option>
                <option value="Music">Music</option>
                <option value="TV">TV Show</option>
            </options>
        </state>
    </channel-type>
    <channel-type id="repeat">
        <item-type>String</item-type>
        <label>Repeat State</label>
        <description>Indicate if tracks are repeating</description>
        <state>
            <options>
                <option value="Off">No</option>
                <option value="Track">Current Track</option>
                <option value="All">All Tracks</option>
            </options>
        </state>
    </channel-type>
    <channel-type id="shuffle">
        <item-type>String</item-type>
        <label>Shuffle State</label>
        <description>Indicate if tracks are shuffling</description>
        <state>
            <options>
                <option value="True">Yes</option>
                <option value="False">No</option>
            </options>
        </state>
    </channel-type>

    <channel-type id="album">
        <item-type>String</item-type>
        <label>Album</label>
        <description>Album currently plaing</description>
        <state readOnly="true">
        </state>
    </channel-type>
    <channel-type id="title">
        <item-type>String</item-type>
        <label>Title</label>
        <description>Title currently plaing</description>
        <state readOnly="true">
        </state>
    </channel-type>
    <channel-type id="artist">
        <item-type>String</item-type>
        <label>Artist</label>
        <description>Artist of the media</description>
        <state readOnly="true">
        </state>
    </channel-type>
   <channel-type id="genre">
        <item-type>String</item-type>
        <label>Genre</label>
        <description>Genre of the media</description>
        <state readOnly="true">
        </state>
    </channel-type>
   <channel-type id="artworkUrl">
        <item-type>String</item-type>
        <label>ArtworkURL</label>
        <description>URL to download the cover</description>
        <state readOnly="true">
        </state>
    </channel-type>
   <channel-type id="position">
        <item-type>String</item-type>
        <label>Position</label>
        <description>Play position in the media</description>
    </channel-type>
   <channel-type id="totalTime">
        <item-type>String</item-type>
        <label>Total Duration</label>
        <description>Total duration of the media</description>
        <state readOnly="true">
        </state>
    </channel-type>

</thing:thing-descriptions>
